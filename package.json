{
  "name": "@crispy-streaming/crispy-addon-client",
  "version": "2.0.1",
  "description": "Modern TypeScript client for the Stremio add-on protocol (v3) for Web, React Native, and Node 18+",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./transports": {
      "types": "./dist/transports/index.d.ts",
      "import": "./dist/transports/index.js",
      "require": "./dist/transports/index.cjs"
    },
    "./transports/http": {
      "types": "./dist/transports/http.d.ts",
      "import": "./dist/transports/http.js",
      "require": "./dist/transports/http.cjs"
    },
    "./transports/ipfsShim": {
      "types": "./dist/transports/ipfsShim.d.ts",
      "import": "./dist/transports/ipfsShim.js",
      "require": "./dist/transports/ipfsShim.cjs"
    },
    "./transports/legacy": {
      "types": "./dist/transports/legacy.d.ts",
      "import": "./dist/transports/legacy.js",
      "require": "./dist/transports/legacy.cjs"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "legacy",
    "LICENSE.md",
    "README.md"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "clean": "node -e \"require('node:fs').rmSync('dist',{recursive:true,force:true})\"",
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepack": "npm run build"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aayushrautela/crispy-addon-client.git"
  },
  "keywords": [
    "stremio",
    "addon",
    "client",
    "typescript",
    "react-native",
    "ipfs"
  ],
  "author": "Smart Code OOD",
  "license": "MIT",
  "homepage": "https://github.com/aayushrautela/crispy-addon-client#readme",
  "devDependencies": {
    "tsup": "^8.5.0",
    "typescript": "^5.7.3",
    "vitest": "^2.1.9"
  }
}
